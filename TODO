sqlite DB schema:

table: paths
id INTEGER PRIMARY KEY
base_path TEXT

table: files
id INTEGER PRIMARY KEY
base_path_id INTEGER
filename TEXT
timestamp TEXT
duration INTEGER (nanoseconds)
is_video INTEGER (0 or 1)

table: songs
id INTEGER PRIMARY KEY
media_id INTEGER
title TEXT
artist TEXT

